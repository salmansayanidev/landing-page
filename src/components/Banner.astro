---

import { Image } from "astro:assets";

      

interface Props {
	para: string;
	sectitle: string;
	secsbtitle: string;
    href1 : string;
    href2 : string;
    BannerImages : string;
}

const { para , sectitle , secsbtitle , href1 , href2 , BannerImages} = Astro.props;


---


<div class="bnner-inner">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-md-6">
                <div class="banner-text-area">
                    <h3 class="para text-white">{para}</h3>
                    <h1 class="sec-title text-white">{sectitle}</h1>
                    <h2 class="sec-sb-title">{secsbtitle}</h2>
                    <div class="flex-btn-area justify-content-start mt-5">
                        <div class="">
                            <a href={href1} class="primary-btn">
                                <span class="primary-btn-icon">
                                    <i class="fa-solid fa-phone-volume"></i>
                                </span>
                                <span class="primary-btn-text">
                                    123-123-0000
                                </span>
                            </a>
                        </div>
                        <div class="">
                            <a href={href2} class="primary-btn btn-2">
                                <span class="primary-btn-icon">
                                    <i class="fa-solid fa-phone-volume"></i>
                                </span>
                                <span class="primary-btn-text">
                                    live chat
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="position-relative">
                    <div class="banner-imgs-area">
                        {
                            BannerImages.map((BannerImage , index) => (
                                <div class="banner-mobile">
                                    <Image class={'img-fluid bnner-mobile-img'} src={BannerImage} alt={index} />
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
